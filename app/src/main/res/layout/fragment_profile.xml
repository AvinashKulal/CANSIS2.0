<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/college_color_dark"
            android:orientation="vertical"
            android:layout_height="250dp">


          <ImageView
                android:layout_width="256px"
                android:layout_height="256px"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
              android:elevation="200dp"
                android:id="@+id/s_image">


            </ImageView>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:elevation="20dp"
            android:id="@+id/cardview"
            android:background="@color/white"

            android:layout_height="60dp">
            <LinearLayout
                android:weightSum="3"

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">


                <TextView
                    style="@style/GreenText"
                    android:textColor="@color/college_color"
                    android:id="@+id/student_name"
                    android:layout_weight="3"
                    android:text="ABCD"
                    android:textSize="19dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>




        </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/detail_linearLayout"
    android:layout_below="@+id/cardview"
    android:layout_margin="10dp"

    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"

        android:id="@+id/phone"
        android:textSize="18dp"

        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:id="@+id/email"
        android:textSize="18dp">

    </TextView>
    <TextView
        android:layout_width="wrap_content"

        android:id="@+id/s_branch"
        android:textSize="18dp"
        android:layout_marginTop="15dp"

        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="wrap_content"

        android:id="@+id/s_address"
        android:textSize="18dp"
        android:layout_marginTop="15dp"

        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="wrap_content"

        android:id="@+id/s_year"
        android:textSize="18dp"
        android:layout_marginTop="15dp"

        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="wrap_content"

        android:id="@+id/s_mother"
        android:textSize="18dp"
        android:layout_marginTop="15dp"

        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="wrap_content"

        android:id="@+id/s_mno"
        android:textSize="18dp"
        android:layout_marginTop="15dp"

        android:layout_height="wrap_content">

    </TextView>

</LinearLayout>









    </RelativeLayout>







</FrameLayout>