<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:layout_margin="10dp"
    android:layout_height="80dp">
<LinearLayout
    android:padding="2dp"
    android:weightSum="3"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:text="SUBJECT 1"
            android:textSize="20dp"
            android:textColor="@color/college_color_dark"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:text="grade"
            android:gravity="left"
            android:textAlignment="gravity"

            android:layout_weight="1"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/markObtained"
            android:layout_width="wrap_content"
            android:text="obtained"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/grade_point"
            android:layout_width="wrap_content"
            android:text="grade point"
            android:gravity="left"
            android:textAlignment="gravity"

            android:layout_weight="1"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/credit_point"
            android:layout_width="wrap_content"
            android:text="credit point"
            android:gravity="left"
            android:textAlignment="gravity"

            android:layout_weight="1"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>