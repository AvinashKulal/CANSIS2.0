<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarksInternalFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <LinearLayout
            android:id="@+id/top_panel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/backgrund_shape"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/marks">


            </ImageView>

            <TextView
                android:id="@+id/profile_text"
                style="@style/GreenText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="MARKS">

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_panel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/semText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="| SEMESTER - 1 |"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cie1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/college_color_dark"
                android:text="CIE 1"
                android:textStyle="bold"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/cie2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/college_color_dark"
                android:text="CIE 2"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/cie3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/college_color_dark"
                android:text="CIE 3"
                android:textStyle="bold"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/cieavg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/college_color_dark"
                android:text="CIE AVG"
                android:textStyle="bold"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/see"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/college_color_dark"
                android:text="SEE"
                android:textStyle="bold"
                android:textColor="@color/white" />



        </LinearLayout>
    </RelativeLayout>

</ScrollView>