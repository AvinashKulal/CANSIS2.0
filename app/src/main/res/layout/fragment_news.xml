<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/backgrund_shape"
        android:orientation="vertical"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/news">


        </ImageView>
        <TextView
            android:id="@+id/profile_text"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="CIRCULARS"
            android:layout_marginTop="10dp"
            style="@style/GreenText"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/news_recylerview"
            android:layout_width="match_parent"

            android:layout_marginTop="200dp"
            android:layout_height="wrap_content"
            android:padding="2dp"


            >

        </androidx.recyclerview.widget.RecyclerView>
        <Button
            android:id="@+id/more_news"
            android:layout_below="@id/news_recylerview"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            
            android:textColor="@color/white"
            android:text="Load More"
            android:background="@color/college_color_dark"
            android:layout_height="wrap_content">

        </Button>

    </RelativeLayout>
</FrameLayout>