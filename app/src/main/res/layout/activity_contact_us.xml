<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".ContactUs">
    <TextView
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:text="CONTACT US"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        style="@style/welcom_text"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_margin="5dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/location"
                >



            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GreenText"
                android:text="LOCATION"
                >

            </TextView><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GreenText"
            android:textSize="22dp"
            android:textAlignment="center"
            android:text="Benjanapadavu, Bantwal Taluk Mangaluru, D.K. District
Karnataka, INDIA - 574219"
            >

        </TextView>

        </LinearLayout>










        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phone"
                >



            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GreenText"
                android:text="CALL US ON"
                >

            </TextView><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GreenText"
            android:textSize="25dp"
            android:text="8792727001/8792736001"
            >

        </TextView>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/college_color"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mail"
                >



            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GreenText"
                android:text="EMAIL TO US"
                >

            </TextView><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GreenText"
            android:textSize="25dp"
            android:text="canarait@gmail.com"
            >

        </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fax"
                >



            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GreenText"
                android:text="FAX"
                >

            </TextView><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GreenText"
            android:textSize="25dp"
            android:text="0824-2278675"
            >

        </TextView>

        </LinearLayout>








    </LinearLayout>

</LinearLayout>